<div class="d-flex  min-vh-100 ">
  <div class="col-5  text-white d-none d-md-flex flex-column background-main  justify-content-center align-items-center text-center">
    <h1 class="display-2">Join Us Today !</h1>
    <h2 class="display-2">And generate unlimted links!</h2>
     <%= link_to "Signup", new_registration_path(resource_name) ,:class => "btn btn-info w-50 text-white mt-2 "%>

  </div>
  <div class="col-12 col-md-7 d-flex flex-column justify-content-center justify-items-center text-center">

    <p class="display-3" href="#"><i class="fa-solid fa-link fa-xs"></i> JuicyUrl <i class="fa-solid fa-link fa-xs"></i></p>
    <% if notice %>
         <p  class="alert alert-danger" role="alert"><%= notice %></p> 
    <% end %>
        <% if alert %>
          <p class="alert alert-danger" role="alert"><%= alert %></p> 
    <% end %>
      <%= form_for(resource, :html => {:class => 'p-5',"data-turbo" => "false"},  as: resource_name, url: session_path(resource_name)) do |f| %>
     
  <div class="mb-3 input-group">
    <%= f.label :email ,:class => "input-group-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class => "form-control form-control-lg" %>
  </div>

  <div class="mb-3 input-group">
    <%= f.label :password,:class => "input-group-text" %><br />
    <%= f.password_field :password, autocomplete: "current-password" ,:class => "form-control form-control-lg"  %>
  </div>


  <div class="actions d-flex  justify-content-center justify-items-center text-center gap-3">
    <%= f.submit "Log in" ,:class => "btn background-main text-white mt-2 " %>
  </div>
<% end %> 
  </div>
</div>


