<div class="container details bg-white rounded shadow p-3">
  <ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Alias
      <span ><%= @link.alias %></span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Original link
      <span ><%= link_to @link.original_link, @link.original_link, {:target => '_blank'} %></span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Total visits
      <span class="badge bg-info"> <%= @link.visits_count %></span>
    </li>
  </ul>
  <div class="card mt-5">
    <h5 class="card-header">Vists Per Day</h5>
    <div class="card-body d-flex justify-content-center">
      <%= column_chart(@visits ,  ytitle: "Visits") %>
    </div>
  </div>
</div>
